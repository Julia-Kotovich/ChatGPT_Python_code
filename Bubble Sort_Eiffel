class
	BUBBLE_SORT

create
	make

feature 
	make
		local
			l_array: ARRAY [INTEGER]
		do
			create l_array.make_empty
			l_array.extend [64, 34, 25, 12, 22, 11, 90]
			bubble_sort (l_array)
			io.put_string (l_array.out)
		end

	bubble_sort (a_array: ARRAY [INTEGER])
		local
			i, j, n, temp: INTEGER
		do
			n := a_array.count
			from
				i := 0
				temp := 0
			until
				i = n - 1
			loop
				j := 0
				from
					j := 0
					temp := 0
				until
					j = n - i - 2
				loop
					if a_array [j] > a_array [j + 1] then
						temp := a_array [j]
						a_array [j] := a_array [j + 1]
						a_array [j + 1] := temp
					end
					j := j + 1
				end
				i := i + 1
			end
		end
end
